@model RipperdocShop.Web.Models.ViewModels.CategoryProductsViewModel

@{
  ViewData["Title"] = Model.Category.Name;
}

<div class="container mx-auto px-4 py-6">
  <h1 class="text-3xl font-bold mb-4">@Model.Category.Name</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    @foreach (var product in Model.Products.Products)
    {
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
        <img src="@product.ImageUrl" alt="@product.Name" class="w-full h-48 object-cover" />
        <div class="p-4">
          <h2 class="text-lg font-semibold">@product.Name</h2>
          <p class="text-gray-500">$@product.Price.ToString("F2")</p>
          <a asp-controller="Products" asp-action="Details" asp-route-slug="@product.Slug"
             class="mt-2 inline-block bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700">
            View Details
          </a>
        </div>
      </div>
    }
  </div>
</div>
