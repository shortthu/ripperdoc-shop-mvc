@model RipperdocShop.Web.Models.ViewModels.CategoryProductsViewModel

<section class="max-w-screen-xl mx-auto py-8 px-4">
  <h1 class="text-2xl font-bold mb-4">Products in @Model.Category.Name</h1>

  <div class="grid md:grid-cols-3 sm:grid-cols-2 gap-6">
    @foreach (var product in Model.Products.Products)
    {
      <div class="p-4 border rounded shadow bg-white">
        <img src="@product.ImageUrl" class="h-40 w-full object-cover mb-3 rounded" />
        <h2 class="font-bold text-lg">@product.Name</h2>
        <p class="text-sm text-gray-500 mb-2">$@product.Price</p>
        <a asp-controller="Products" asp-action="Details" asp-route-slug="@product.Slug" class="text-blue-600 hover:underline">View Details</a>
      </div>
    }
  </div>
</section>
