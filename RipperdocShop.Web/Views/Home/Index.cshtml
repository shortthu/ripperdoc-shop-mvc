@{
  ViewData["Title"] = "Home Page";
}
@model RipperdocShop.Web.Models.ViewModels.HomeViewModel

<section class="max-w-screen-xl mx-auto py-8 px-4">
  <h2 class="text-2xl font-bold mb-4">Categories</h2>
  <div class="grid md:grid-cols-4 sm:grid-cols-2 gap-6 mb-10">
    @foreach (var category in Model.Categories.Categories)
    {
      <a asp-controller="Products" asp-action="ByCategory" asp-route-slug="@category.Slug"
         class="block p-4 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
        <h2 class="text-lg font-semibold">@category.Name</h2>
      </a>
    }
  </div>

  <h2 class="text-2xl font-bold mb-4">Featured Products</h2>

  <div class="grid md:grid-cols-4 sm:grid-cols-2 gap-6">
    @foreach (var product in Model.FeaturedProducts)
    {
      <div class="bg-white rounded-lg shadow border p-4">
        <img class="mb-3 w-full h-48 object-cover rounded" src="@product.ImageUrl" alt="@product.Name"/>
        <h3 class="text-lg font-bold">@product.Name</h3>
        <p class="text-gray-600">$@product.Price</p>
        <a asp-controller="Products" asp-action="Details" asp-route-slug="@product.Slug"
           class="mt-2 inline-block text-blue-500 hover:underline">View</a>
      </div>
    }
  </div>
</section>

