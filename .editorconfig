# Top-level EditorConfig file
root = true

# All files - default to 2 spaces
[*]
indent_style = space
indent_size = 2
insert_final_newline = true
charset = utf-8

# C# files
[*.cs]
indent_size = 4

# Razor Pages, HTML, and similar
[*.cshtml]
indent_size = 2

[*.html]
indent_size = 2

[*.razor]
indent_size = 2

# JSON, CSS, JS, etc.
[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.css]
indent_size = 2
